{
    "compileOnSave": true,
    "include": ["**/*.ts"],
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "sourceMap": true,
        "removeComments": true,
        "noImplicitAny": true,
        "outDir": "dist",
        "strict": true,
        "noImplicitThis": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": [
            "es5",
            "es6",
            "es2015.core",
            "es2015.collection",
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2015.proxy",
            "es2015.reflect",
            "es2015.symbol",
            "es2015.symbol.wellknown",
            "esnext.asynciterable"
        ]
    },
    "files": ["src/app.ts"]
}